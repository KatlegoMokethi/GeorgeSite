@model GeorgeSite.Models.Entities.Item

@{
    ViewData["Title"] = "Create";
    Layout = "_Admin";
}
<div class="container">
    <h1 class="font-weight-bold">ADD NEW STOCK ITEM</h1>
    <hr />
    <div class="row">
        <div class="col-md-4 card text-white" style="background-color: darkslategrey;">
            <form asp-action="Create" enctype="multipart/form-data">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <div class="form-group">
                    <label asp-for="Name" class="control-label"></label>
                    <input asp-for="Name" class="form-control" />
                    <span asp-validation-for="Name" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Category" class="control-label"></label>
                    <input asp-for="Category" class="form-control" />
                    <span asp-validation-for="Category" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Description" class="control-label"></label>
                    <input asp-for="Description" class="form-control" />
                    <span asp-validation-for="Description" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Rating" class="control-label"></label>
                    <input asp-for="Rating" class="form-control" />
                    <span asp-validation-for="Rating" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="OnHand" class="control-label"></label>
                    <input asp-for="OnHand" class="form-control" />
                    <span asp-validation-for="OnHand" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Price" class="control-label"></label>
                    <input asp-for="Price" class="form-control" />
                    <span asp-validation-for="Price" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Vendor" class="control-label"></label>
                    <input asp-for="Vendor" class="form-control" />
                    <span asp-validation-for="Vendor" class="text-danger"></span>
                </div>
                <div>
                    <input asp-for="Image" type="file" name="file" />
                </div>

                <div class="form-group">
                    <input type="submit" value="Create" class="btn btn-primary mt-3" />
                </div>
            </form>
        </div>
        <div class="col-md-8 brands">
            <h4 class="display-4">BRANDS</h4>
            <img src="~/images/resources/AlwaysON.jpg" />
            <img src="~/images/resources/AppStore.jpg" />
            <img src="~/images/resources/Deezer.jpg" />
            <img src="~/images/resources/GooglePlay.jpg" />
            <img src="~/images/resources/Kaspersky.jpg" />
            <img src="~/images/resources/MS_XBox.jpg" />
            <img src="~/images/resources/MS_XBoxLive.jpg" />
            <img src="~/images/resources/MS365.jpg" />
            <img src="~/images/resources/Netflix.jpg" />
            <img src="~/images/resources/Norton.jpg" />
            <img src="~/images/resources/PlayStation.jpg" />
            <img src="~/images/resources/PlayStationStore.jpg" />
            <img src="~/images/resources/PrepaidGamer.jpg" />
            <img src="~/images/resources/ShowMax.jpg" />
            <img src="~/images/resources/Sorbet.jpg" />
            <img src="~/images/resources/Spotify.jpg" />
            <img src="~/images/resources/Steam.jpg" />
            <img src="~/images/resources/TFG.jpg" />
            <img src="~/images/resources/Uber.jpg" />
            <img src="~/images/resources/UberEats.jpg" />
            <img src="~/images/resources/XBoxGamePass.jpg" />
            <img src="~/images/resources/Yuppiechef.jpg" />
        </div>
    </div>

    <div>
        <a asp-action="Index">Back to List</a>
    </div>
</div>
